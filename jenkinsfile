pipeline {
    agent any

    environment {
    
        PATH = "/root/.nvm/versions/node/v18.18.2/bin:$PATH"
        SSH_COMMAND = "ssh -i /var/lib/jenkins/.ssh/id_rsa"
    }
    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/demo-app.git'
            }
        }

     stage('Build') {
     options {
         timeout(time: 10, unit: 'MINUTES')
      }
     steps {
         script {
             echo 'Installing dependencies...'
              sh 'nvm use 18 && npm install'
             echo 'Building the app...'
             sh 'npm run build'
         }
     }
 }

        /*  stage('Update Browserslist') {
            steps {
                script {
                    echo 'Updating Browserslist database...'
                    sh 'npx browserslist@latest --update-db'
                }
            }
        } */

     
    }

}
